generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  SECRETARY
  RESPONSIBLE
  ADMIN
  STUDENT
  TEACHER
}

model User {
  id        String  @id @default(cuid()) @db.VarChar(30)
  name      String
  email     String  @unique
  password  String
  document  String
  phone     String
  isActive  Boolean @default(false) @map("active")
  addressId String? @map("address_id") @db.VarChar(30)

  changeLog Json? @map("change_log")

  role UserRole @default(STUDENT)

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  addresses Address? @relation(fields: [addressId], references: [id])

  @@map("users")
}

model Address {
  id           String @id @default(cuid()) @db.VarChar(30)
  street       String
  number       String
  neighborhood String
  city         String
  state        String
  complement   String

  changeLog Json? @map("change_log")

  users   User[]
  schools School[]

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("addresses")
}

model School {
  id        String  @id @default(cuid()) @db.VarChar(30)
  name      String
  shortName String  @db.VarChar(50)
  isActive  Boolean
  addressId String? @map("address_id") @db.VarChar(30)

  changeLog Json?    @map("change_log")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  addresses Address? @relation(fields: [addressId], references: [id])

  @@map("schools")
}
